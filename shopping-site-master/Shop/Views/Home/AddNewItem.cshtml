@model Item
@{
    ViewData["Title"] = "Add New Item";
}

<h2>Adding new Item</h2>

<form asp-controller="Home" asp-action="AddNewItem" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Price" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ShortDescription" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>


